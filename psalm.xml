<?xml version="1.0"?>
<!-- findUnusedVariablesAndParams="true" -->
<psalm
    errorLevel="3"
    resolveFromConfigFile="true"
>
    <projectFiles>
        <directory name="php/" />
        <directory name="auth/" />
        <directory name="VirtualWaitingRoom/php/" />
        <directory name="reports/" />
        <directory name="tools/" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="VirtualWaitingRoom/php/pdfGenerator/" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <MissingClosureParamType errorLevel="suppress" />
        <MissingClosureReturnType errorLevel="suppress" />
    </issueHandlers>
</psalm>
