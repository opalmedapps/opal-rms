{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    // https://docs.renovatebot.com/presets-default/#pinallexceptpeerdependencies
    ":pinAllExceptPeerDependencies",
    // https://docs.renovatebot.com/presets-default/#separatemultiplemajorreleases
    ":separateMultipleMajorReleases",
    // https://docs.renovatebot.com/presets-default/#separatepatchreleases
    ":separatePatchReleases",
  ],

  "assignees": ["anton.gladyr", "yickmo"],
  "labels": ["dependencies"],
  "separateMinorPatch": true,
  "ignoreDeps": [
    "checklist-model",
    "dayjs",
    "firebase",
    "popper.js",
    "swagger-ui-dist",
    "twilio/sdk",
    "guzzlehttp/guzzle",
    "ulrichsg/getopt-php",
    "league/openapi-psr7-validator",
    "cebe/php-openapi",
    "symfony/lock",
    "vlucas/phpdotenv",
    "phpmailer/phpmailer",
    "ext-xml",
    "phpstan/phpstan",
    "vimeo/psalm",
    "friendsofphp/php-cs-fixer",
  ],
  "packageRules": [
    // Change commit type to build for Docker-related updates
    {
      "matchDatasources": ["docker", "docker-compose"],
      "semanticCommitType": "build"
    },
    // Group auxiliary angular-related updates
    {
      "matchPackagePatterns": ["^angular", "ng-table"],
      "excludePackagePatterns": ["^@xlts.dev/"],
      "groupName": "auxiliary angular packages"
    },
    // Group xlts angular-related updates
    {
      "matchSourceUrlPrefixes": ["https://github.com/xlts-dev/"],
      "groupName": "xlts angular packages"
    },
    // Group datatables-related updates
    // TODO: remove "enabled": false
    {
        "matchPackagePatterns": ["^datatables"],
        "groupName": "datatables packages",
        "enabled": false
    },
    // Group highcharts-related updates
    // TODO: remove "enabled": false
    {
        "matchPackagePatterns": ["^highcharts"],
        "groupName": "highcharts packages",
        "enabled": false
    },
    // Group bootstrap-related updates
    // TODO: remove "enabled": false
    {
        "matchPackagePatterns": ["^bootstrap"],
        "groupName": "bootstrap packages",
        "enabled": false
    },
    // Group jquery-related updates
    // TODO: remove "enabled": false
    {
        "matchPackagePatterns": ["^jquery"],
        "groupName": "jquery packages",
        "enabled": false
    },
    // Group ui-related updates
    // TODO: remove "enabled": false
    {
        "matchPackagePatterns": ["^ui"],
        "groupName": "ui packages",
        "enabled": false
    }
  ],
}
