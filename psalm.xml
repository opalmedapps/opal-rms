<?xml version="1.0"?>
<psalm
    errorLevel="3"
    resolveFromConfigFile="true"
    findUnusedPsalmSuppress="true"
    findUnusedCode="true"
>
    <projectFiles>
        <directory name="php/" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="php/tool/pdfGenerator/" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <MissingClosureParamType errorLevel="suppress" />
        <MissingClosureReturnType errorLevel="suppress" />
        <PossiblyUnusedMethod errorLevel="suppress" />
    </issueHandlers>

    <stubs>
        <file name="php/stub/PDOStatement.stub" />
    </stubs>
</psalm>
